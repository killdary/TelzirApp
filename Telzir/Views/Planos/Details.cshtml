@model Telzir.Models.Plano

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Plano</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Porcentagem)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Porcentagem)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Criado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Criado)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Editado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Editado)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<div class="row">
<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Nome</th>
      <th scope="col">Minutos</th>
      <th scope="col">Ações</th>
    </tr>
  </thead>
  <tbody>
      @foreach (var item in Model.Pacotes) {
        <tr>
            <td scope="row">@item.Id</td>
            <td scope="row">@item.Descricao</td>
            <td scope="row">@item.Minutos</td>             
            <td>
                <a asp-controller="Pacotes" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-controller="Pacotes" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-controller="Pacotes" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>       
        </tr>
        }
  </tbody>
</table>


</div>

