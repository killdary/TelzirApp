@model IEnumerable<Telzir.Models.Tarifa>

@{
    ViewData["Title"] = "Index";
}

<h1>Tarifas</h1>

<p>
    <a class="btn btn-primary btn-sm"  asp-action="Create">Cadastrar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DdOrigem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DdDestino)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DdOrigem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DdDestino)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">Editar</a> 
                <a class="btn btn-secondary btn-sm" asp-action="Details" asp-route-id="@item.Id">Visualizar</a> 
                <a class="btn btn-warning btn-sm" asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
